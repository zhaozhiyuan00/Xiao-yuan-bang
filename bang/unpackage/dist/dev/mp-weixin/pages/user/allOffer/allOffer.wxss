
.head-tab {
	width: 100%;
	height: 100rpx;
}
.head-tab .tab-item {
	height: 100rpx;
	line-height: 100rpx;
	text-align: center;
	position: relative;
}
.head-tab .active {
	color: #4B7BEC;
}
.head-tab .active::after {
	content: '';
	position: absolute;
	width: 100%;
	height: 8rpx;
	background-color: #4B7BEC;
	top: 92rpx;
	left: 50%;
	-webkit-transform: translate(-50%);
	        transform: translate(-50%);
	border-radius: 8rpx;
}
.main {
	height: calc(100vh - 100rpx);
}
.main .offer-list {
	width: 100%;
	height: auto;
}
card:last-of-type {
	margin-bottom: 30rpx;
}

